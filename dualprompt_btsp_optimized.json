{
    "prefix": "dualprompt_btsp_optimized",
    "dataset": "cifar224",
    "memory_size": 0,
    "memory_per_class": 0,
    "fixed_memory": false,
    "shuffle": true,
    "init_cls": 10,
    "increment": 10,
    "model_name": "dualprompt",
    "backbone_type": "vit_base_patch16_224_dualprompt",
    "get_original_backbone": true,
    "device": ["0"],
    "seed": [1993],
    
    "_comment_training": "Training hyperparameters",
    "tuned_epoch": 5,
    "init_lr": 0.001,
    "batch_size": 24,
    "weight_decay": 0,
    "min_lr": 1e-5,
    "optimizer": "adam",
    "scheduler": "constant",
    "reinit_optimizer": true,

    "_comment_model": "Model architecture settings",
    "global_pool": "token",
    "head_type": "token",
    "freeze": ["blocks", "patch_embed", "cls_token", "norm", "pos_embed"],
    "pretrained": true,
    "drop": 0.0,
    "drop_path": 0.0,

    "_comment_prompts": "DualPrompt configuration",
    "use_g_prompt": true,
    "g_prompt_length": 5,
    "g_prompt_layer_idx": [0, 1],
    "use_prefix_tune_for_g_prompt": true,
    "use_e_prompt": true,
    "e_prompt_layer_idx": [2, 3, 4],
    "use_prefix_tune_for_e_prompt": true,
    "prompt_pool": true,
    "size": 10,
    "length": 5,
    "top_k": 1,
    "initializer": "uniform",
    "prompt_key": true,
    "prompt_key_init": "uniform",
    "use_prompt_mask": true,
    "shared_prompt_pool": true,
    "shared_prompt_key": false,
    "batchwise_prompt": true,
    "embedding_key": "cls",
    "predefined_key": "",
    "pull_constraint": true,
    "pull_constraint_coeff": 0.1,
    "same_key_value": false,

    "_comment_btsp_core": "BTSP core memory parameters",
    "use_btsp": true,
    "btsp_N_bits": 8192,
    "btsp_topk": 128,
    "btsp_theta": 0.24,
    "btsp_tau_e_steps": 3.5,
    "btsp_branches": 8,
    "btsp_alpha": 0.7,

    "_comment_btsp_control": "BTSP control system parameters",
    "btsp_mode": "A",
    "btsp_target_epsilon": 0.05,
    "btsp_use_fusion_train": false,
    "btsp_use_fusion_eval": true,
    "btsp_use_event_driven": true,
    "btsp_enable_unified_protocol": true,
    "btsp_eps0": 0.05,
    "btsp_T_eff": 1.5,
    "btsp_use_eligibility_trace": true,
    "btsp_trace_decay": 0.95,
    "btsp_use_b_line_controller": true,
    "btsp_use_d_line_controller": true,
    "btsp_knee_detection_threshold": 0.1,
    "btsp_epsilon_control_gain": 0.1,
    "btsp_p_gate_min": 0.006,
    "btsp_p_gate_cap": 0.05,
    "btsp_p_gate_delta_abs": 0.002,
    "btsp_p_gate_delta_rel": 0.5,
    "btsp_occ_upper": 0.13,
    "btsp_occ_lower": 0.11,
    "btsp_enable_achievable": true,
    "btsp_eps_ema_gamma": 0.7,
    "btsp_eps_deadzone": 0.005,
    "btsp_alpha_min": 0.7,
    "btsp_alpha_max": 0.9,
    "btsp_alpha_dampen_threshold": 6.0,
    "btsp_alpha_dampen_strength": 0.5,

    "_comment_btsp_homeostasis": "BTSP homeostasis and monitoring",
    "btsp_homeostasis_threshold": 0.12,
    "btsp_occupancy_monitoring": true,
    "btsp_homeo_interval": 100,
    "btsp_zstats_interval": 30,

    "_comment_btsp_evaluation": "BTSP evaluation and logging",
    "btsp_use_unified_eval": true,
    "btsp_resource_budget": {
        "max_flops": 1e12,
        "max_memory_mb": 8192,
        "max_bytes": 1e9,
        "max_time_seconds": 3600
    },
    "btsp_eval_metrics": ["coverage", "rmse", "apb"],
    "btsp_coverage_tolerance": 0.1,
    "btsp_enable_unified_logging": true,
    "btsp_log_interval": 10,
    "btsp_save_control_states": true,
    "btsp_log_file": "btsp_mode_a_control.log",

    "_comment_btsp_experimental": "BTSP experimental settings",
    "btsp_experiment_name": "DualPrompt_BTSP_ModeA_EventDriven",
    "btsp_experiment_logging": true,
    "btsp_capacity_probe": false,
    "btsp_epsilon_control_probe": false,
    "btsp_stc_probe": false,
    "btsp_x_bits_buffer_size": 256,
    "btsp_epsilon_hysteresis": 0.01,
    "btsp_epsilon_tolerance": 0.005,
    "btsp_save_snapshots": true,
    "btsp_snapshot_interval": 100,
    "btsp_enable_performance_profiling": true
}
